{
    "remote.SSH.remoteServerListenOnSocket": true,
    "python.linting.mypyEnabled": true,
    "editor.fontFamily": "'Operator Mono Lig Medium', Ligconsolata, 'Anonymous Pro for Powerline', 'MesloLGS NF Regular'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.letterSpacing": -0.41,
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.experimental.pasteActions.enabled": true,
    "editor.cursorBlinking": "solid",
    //"editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "editor.glyphMargin": true,
    "terminal.integrated.macOptionIsMeta": true,
    "debug.console.fontFamily": "MesloLGS NF",
    "editor.codeLensFontFamily": "MesloLGS NF",
    "notebook.outputFontFamily": "MesloLGS NF",
    "editor.inlayHints.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 14,
    "window.titleBarStyle": "custom",
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "editor.inlineSuggest.enabled": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "terminal.integrated.tabs.hideCondition": "never",
    "problems.showCurrentInStatus": true,
    "python.analysis.typeCheckingMode": "basic",
    "mypy.runUsingActiveInterpreter": true,
    "python.analysis.autoImportCompletions": true,
    "editor.formatOnSave": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "python": false
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
    },
    "C_Cpp.intelliSenseEngine": "Disabled",
    "[cpp]": {
        "editor.wordBasedSuggestions": true,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
    },
    "C_Cpp.clang_format_style": "LLVM",
    "workbench.colorTheme": "Atom One Dark",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "security.workspace.trust.untrustedFiles": "open",
    "git.enableCommitSigning": true,
    "git.terminalGitEditor": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.experimental.useCustomCodeActionMenu": true,
    "editor.inlayHints.padding": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": false,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.horizontalScrollbarSize": 18,
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.verticalScrollbarSize": 18,
    "editor.showFoldingControls": "always",
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "[css]": {
        "editor.defaultFormatter": "aeschli.vscode-css-formatter"
    },
    "[html]": {
        "editor.defaultFormatter": "ecmel.vscode-html-css",
        "editor.suggest.insertMode": "replace",
        "gitlens.codeLens.scopes": [
            "document"
        ]
    },
    "workbench.iconTheme": "vs-minimal",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.editor.autoLockGroups": {
        "terminalEditor": false
    },
    "workbench.editor.defaultBinaryEditor": "hexEditor.hexedit",
    "workbench.editor.openPositioning": "last",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.tabSizing": "shrink",
    "window.autoDetectHighContrast": false,
    "window.commandCenter": true,
    "window.dialogStyle": "custom",
    "window.newWindowDimensions": "maximized",
    "explorer.fileNesting.enabled": true,
    "scm.alwaysShowRepositories": true,
    "scm.alwaysShowActions": true,
    "scm.defaultViewMode": "tree",
    "extensions.closeExtensionDetailsOnViewChange": true,
    "extensions.experimental.useUtilityProcess": true,
    "npm.enableRunFromFolder": true,
    "tailwindCSS.emmetCompletions": true,
}